@import "./globales.styl";

nav
    padding: 5px;
    z-index: 99;
    //background-color: rgba(0, 0, 0, 0.85);
    #menu-hamburguesa
        position: absolute;
        top: 60px;
        right: 20px;
        color: #fff;
        font-size: 37px;
        cursor: pointer;
        display: block;
    #menu-vertical
        color: #fff;
        position: absolute;
        padding: 10px;
        top: 100px;
        right: 0px;
        z-index: 999;
        display: none;
    .logo
        padding: 10px 10px;
        img
            width: 100px;
            background-color: #fff;
    .menu-itens
        display: none;
        ul li
            list-style none;
            display: inline-block;
            padding: 30px 18px;
            font-weight: bold;
            font-size: 18px;
            position relative;
            #input_search
                position: relative !important;
                top: -20px !important;
            a
                color: #fff;
                transition-duration: 0.5s;
                &:hover
                    color: red;


@media screen and (min-width: 544px)
	nav
        #menu-hamburguesa
            right: 60px;
        #menu-vertical
            right: 15px;    

@media screen and (min-width: 768px)
	nav
        padding: 20px;
        #menu-hamburguesa
            right: 90px;
        #menu-vertical
            right: 40px;
        .logo
            padding: 10px 25px;

@media screen and (min-width: 992px)
	nav
        #menu-hamburguesa
            display: none;
        #menu-vertical
            display: none !important;    
        .menu-itens
            display: block;
            ul li
                float: right;
                left: -100px;
@media screen and (min-width: 1200px)
	.menu-itens
        ul li
            left: -200px;